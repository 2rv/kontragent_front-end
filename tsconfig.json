{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["dist", "lang/.next", "out", "next.config.js"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/lib/common/lang/lang.constant.js",
    "src/lib/common/lang/lang.action.js",
    "src/lib/common/lang/lang.main.js",
    "src/main/store/storeHandlers.js",
    "src/main/store/store.convert.js",
    "src/core/Home/Home.page.js",
    "src/lib/common/request/pagination.service.ts",
    "src/core/company-admin-item-info-data/company-admin-item-info-data.component.js"
  ]
}
